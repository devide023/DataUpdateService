<?xml version="1.0" encoding="utf-8" ?>
<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">
<processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>
  <schedule>
    <job>
      <name>GkDataSync</name>
      <group>GkDataSyncGroup</group>
      <description>爬取数据</description>
      <job-type>DataUpdateService.Jobs.GkDataSync,DataUpdateService</job-type>
      <durable>true</durable>
      <recover>false</recover>
    </job>
    <trigger>
      <cron>
        <name>GkDataSyncTrigger</name>
        <group>Update</group>
        <job-name>GkDataSync</job-name>
        <job-group>GkDataSyncGroup</job-group>
        <cron-expression>0 0 9,10,12,15,16 * * ?</cron-expression>
      </cron>
    </trigger>
    <job>
      <name>SolrUpdate</name>
      <group>GkDataSyncGroup</group>
      <description>Solr增量数据同步</description>
      <job-type>DataUpdateService.Jobs.SolrUpdate,DataUpdateService</job-type>
      <durable>true</durable>
      <recover>false</recover>
    </job>
    <trigger>
      <cron>
        <name>SolrUpdateTrigger</name>
        <group>Update</group>
        <job-name>SolrUpdate</job-name>
        <job-group>GkDataSyncGroup</job-group>
        <cron-expression>0 30 9 * * ?</cron-expression>
      </cron>
    </trigger>
    <job>
      <name>SolrFullUpdate</name>
      <group>GkDataSyncGroup</group>
      <description>Solr全量数据同步</description>
      <job-type>DataUpdateService.Jobs.SolrFullUpdate,DataUpdateService</job-type>
      <durable>true</durable>
      <recover>false</recover>
    </job>
    <trigger>
      <cron>
        <name>SolrFullUpdateTrigger</name>
        <group>Update</group>
        <job-name>SolrFullUpdate</job-name>
        <job-group>GkDataSyncGroup</job-group>
        <cron-expression>0 0/5 * * * ?</cron-expression>
      </cron>
    </trigger>
  </schedule>
</job-scheduling-data>